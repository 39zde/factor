{
    "name": "factor",
    "version": "v1.1.0",
    "description": "An invoicing application built with TypeScript:React on top of IndexDB packaged with Electron",
    "main": "./out/main/index.js",
    "author": "39zde",
    "type": "module",
    "homepage": "https://github.com/39zde/factor",
    "repository": "https://github.com/39zde/factor",
    "license": "Apache-2.0",
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint ./src -c ./eslint.config.mjs  --fix",
        "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
        "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
        "typecheck": "yarn run typecheck:node && yarn run typecheck:web",
        "start": "electron-vite preview",
        "dev": "electron-vite dev",
        "devtools": "yarn react-devtools",
        "bundle": "yarn run typecheck && electron-vite build",
        "build:unpack": "yarn run build && electron-builder --dir",
        "build:win": "yarn run build && electron-builder --win",
        "build:mac": "electron-vite build && electron-builder --mac",
        "build:linux": "electron-vite build && electron-builder --linux",
        "dist": "electron-builder --publish always"
    },
    "dependencies": {
        "@react-pdf/renderer": "^3.4.4",
        "globals": "^15.9.0",
        "lucide-react": "^0.436.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@electron-toolkit/eslint-config-prettier": "^2.0.0",
        "@electron-toolkit/eslint-config-ts": "^2.0.0",
        "@electron-toolkit/preload": "^3.0.1",
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@electron-toolkit/utils": "^3.0.0",
        "@eslint/js": "^9.9.0",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^20.16.0",
        "@types/react": "^18.3.4",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^8.2.0",
        "@typescript-eslint/parser": "^8.2.0",
        "@vitejs/plugin-react": "^4.3.1",
        "electron": "31.4.0",
        "electron-builder": "^24.13.3",
        "electron-updater": "^6.3.4",
        "electron-vite": "^2.3.0",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.35.0",
        "prettier": "^3.3.3",
        "react-devtools": "^5.3.1",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8.2.0",
        "vite": "^5.4.2",
        "vite-plugin-mkcert": "^1.17.6"
    },
    "packageManager": "yarn@4.1.1+sha512.ec40d0639bb307441b945d9467139cbb88d14394baac760b52eca038b330d16542d66fef61574271534ace5a200518dabf3b53a85f1f9e4bfa37141b538a9590",
    "engines": {
        "node": "v20.16.0"
    },
    "readme": "./README.md"
}
