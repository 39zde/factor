{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
	 "package.json",
	 "electron.vite.config.*",
    "src/renderer/**/*"
  ],
  "exclude": [
	"./.yarnrc.yml"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
	 "module": "ES2022",
	 "target": "ES2022",
	 "strict": true,
	 "noFallthroughCasesInSwitch": false,
	 "noImplicitReturns": false,
	 "typeRoots" : ["./node_modules/@types"],
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@util/*":[
        "src/renderer/src/util/*"
      ],
      "@comps/*":[
        "src/renderer/src/comps/*"
      ]
    }
  }
}
