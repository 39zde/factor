{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
	"src/renderer/src/env.d.ts",
	"src/renderer/src/**/*",
	"src/preload/*.d.ts",
	"package.json"
 ],
  "exclude": [
	"./.yarnrc.yml"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
	 "module": "ES2022",
	 "target": "ES2022",
	 "strict": true,
	 "noFallthroughCasesInSwitch": false,
	 "noImplicitReturns": false,
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@util/*":[
        "src/renderer/src/util/*"
      ],
      "@comps/*":[
        "src/renderer/src/comps/*"
      ]
    }
  }
}
