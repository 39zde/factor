{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/renderer/src/util/worker/*.ts",
    "src/preload/*.d.ts",
  ],
  "exclude": [
	"./.yarnrc.yml"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
	 "module": "ES2022",
	 "target": "ES2022",
	 "strict": true,
	 "noFallthroughCasesInSwitch": false,
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*",
      ],
      "@util/*":[
        "src/renderer/src/util/*"
      ],
      "@comps/*":[
        "src/renderer/src/comps/*"
      ]
    }
  }
}
